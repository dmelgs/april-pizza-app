<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/orange">

    <ScrollView
        android:layout_width="369dp"
        android:layout_height="704dp"
        android:background="@drawable/loginbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"

            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.688">

            <TextView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Menu"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/pizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizzas"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/hawaiian_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Hawaiian"
                    android:textSize="15dp"
                    android:textColor="@color/black"></CheckBox>



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/hawaiian" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cheese_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Cheese"
                    android:textSize="15dp"
                    android:textColor="@color/black"></CheckBox>

                <ImageView
                    android:id="@+id/cheese_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/cheese"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/buffalo_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Buffalo"
                    android:textSize="15dp"
                    android:textColor="@color/black"></CheckBox>

                <ImageView
                    android:id="@+id/buffalo_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/buffalo"
                    android:scaleType="centerInside"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/pepperoni_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Pepperoni"
                    android:textSize="15dp"
                    android:textColor="@color/black"></CheckBox>

                <ImageView
                    android:id="@+id/pepperoni_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/pepperoni"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"

                android:gravity="center">

                <CheckBox
                    android:id="@+id/meat_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Meat"
                    android:textSize="15dp"
                    android:textColor="@color/black"></CheckBox>

                <ImageView
                    android:id="@+id/meat_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/meat"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"

                android:gravity="center">


                <CheckBox
                    android:id="@+id/water_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Bottle"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/water_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/water"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"

                android:gravity="center">


                <CheckBox
                    android:id="@+id/coke_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coke Bottle"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/coke_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/coke"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:background="@drawable/textbox"

                android:gravity="center">


                <CheckBox
                    android:id="@+id/sprite_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sprite Bottle"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/sprite_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/sprite"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/order_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button"
                android:elevation="3dp"
                android:text="Order"
                android:textAlignment="center"
                android:textSize="20dp" />



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>